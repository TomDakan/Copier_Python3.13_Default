# .readthedocs.yaml
# Read the Docs configuration file
# See https://docs.readthedocs.io/en/stable/config-file/v2.html for details

# Required
version: 2

# Set the version of Python and other tools you might need
build:
  os: ubuntu-22.04
  tools:
    python: "{{ python_version }}" # Use the Python version from Copier

mkdocs:
  configuration: mkdocs.yml
  fail_on_warning: false # Set to true for stricter builds if desired

# Optionally declare the Python requirements required to build your docs
python:
  install:
    - requirements: docs-requirements.txt # We'll need to generate this
