name: CI
on: [push, pull_request]

jobs:
  qa:
    name: "QA (${{ matrix.python-version }})"
    runs-on: ubuntu-latest
    strategy:
      matrix:
        # Test on the version you specified, plus one older stable version.
        python-version: ["{{ python_version }}", "3.12"]

    steps:
      - uses: actions/checkout@v4

      - name: Set up PDM
        uses: pdm-project/setup-pdm@v4
        with:
          python-version: ${{ matrix.python-version }}
          cache: true

      - name: Install dependencies
        run: pdm install --dev

    {% if use_safety %} # Conditionally add safety check
      - name: Check for vulnerable dependencies
        run: pdm run security-check
    {% endif %}
      - name: Run QA Suite (Format, Lint, Types, Tests)
        run: pdm run qa
